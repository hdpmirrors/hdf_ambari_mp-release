{
  "type": "full-release",
  "name": "hdf-ambari-mpack",
  "version": "${project.version}",
  "hash": "${buildNumber}",
  "branch": "${scmBranch}",
  "description": "HDF Ambari Management Pack",
  "prerequisites": {
    "min-ambari-version": "${minAmbariVersion}",
    "max-ambari-version": "${maxAmbariVersion}"
  },
  "hooks": [
    {
      "name": "after-install",
      "type": "python",
      "script": "hooks/after_install.py"
    }
  ],
  "artifacts": [
    {
      "name": "hdf-service-definitions",
      "type": "service-definitions",
      "source_dir": "common-services"
    },
    {
      "name": "hdf-stack-definitions",
      "type": "stack-definitions",
      "source_dir": "stacks"
    },
    {
      "name": "hdp-addon-services",
      "type": "stack-addon-service-definitions",
      "source_dir": "hdp-addon-services/HDF/3.0",
      "service_versions_map": [
        {
          "service_name": "NIFI",
          "service_version": "1.2.0",
          "applicable_stacks": [
            {
              "stack_name": "HDP",
              "stack_version": "2.6"
            }
          ]
        },
        {
          "service_name": "REGISTRY",
          "service_version": "0.3.0",
          "applicable_stacks": [
            {
              "stack_name": "HDP",
              "stack_version": "2.6"
            }
          ]
        },
        {
          "service_name": "STREAMLINE",
          "service_version": "0.5.0",
          "applicable_stacks": [
            {
              "stack_name": "HDP",
              "stack_version": "2.6"
            }
          ]
        }
      ]
    },
    {
      "name": "hdp-addon-services-hdp30",
      "type": "stack-addon-service-definitions",
      "source_dir": "hdp-addon-services/HDF/3.2",
      "service_versions_map": [
        {
          "service_name": "NIFI",
          "service_version": "1.5.0",
          "applicable_stacks": [
            {
              "stack_name": "HDP",
              "stack_version": "3.0"
            }
          ]
        },
        {
          "service_name": "NIFI_REGISTRY",
          "service_version": "0.1.0",
          "applicable_stacks": [
            {
              "stack_name": "HDP",
              "stack_version": "3.0"
            }
          ]
        },
        {
          "service_name": "REGISTRY",
          "service_version": "0.3.0",
          "applicable_stacks": [
            {
              "stack_name": "HDP",
              "stack_version": "3.0"
            }
          ]
        },
        {
          "service_name": "STREAMLINE",
          "service_version": "0.6.0",
          "applicable_stacks": [
            {
              "stack_name": "HDP",
              "stack_version": "3.0"
            }
          ]
        }
      ]
    }
  ]
}

