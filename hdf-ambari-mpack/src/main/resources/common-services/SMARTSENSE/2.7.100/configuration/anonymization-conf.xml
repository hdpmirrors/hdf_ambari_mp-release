<configuration supports_final="false">

  <property>
    <name>security.anonymization.max.heap</name>
    <display-name>Anonymization max heap</display-name>
    <value>2048</value>
    <value-attributes>
      <type>int</type>
      <minimum>128</minimum>
      <unit>MB</unit>
    </value-attributes>
    <description>Max heap allocated in MB on every agent for
      anonymization.
    </description>
    <on-ambari-upgrade add="true"/>
  </property>

</configuration>

