                <component>
                    <name>ACTIVITY_EXPLORER</name>
                    <displayName>Activity Explorer</displayName>
                    <category>MASTER</category>
                    <cardinality>0-2</cardinality>
                    <versionAdvertised>false</versionAdvertised>
                    <commandScript>
                        <script>scripts/activity_explorer.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>600</timeout>
                    </commandScript>
                    <logs>
                        <log>
                            <logId>activity_explorer</logId>
                            <primary>true</primary>
                        </log>
                    </logs>
                    <configuration-dependencies>
                        <config-type>activity-zeppelin-site</config-type>
                        <config-type>activity-zeppelin-env</config-type>
                        <config-type>activity-zeppelin-shiro</config-type>
                        <config-type>activity-log4j</config-type>
                        <config-type>activity-zeppelin-interpreter</config-type>
                    </configuration-dependencies>
                    <osSpecifics>
                        <osSpecific>
                            <osFamily>any</osFamily>
                            <packages>
                                <package>
                                    <name>smartsense-activity-explorer</name>
                                    <skipUpgrade>true</skipUpgrade>
                                </package>
                            </packages>
                        </osSpecific>
                    </osSpecifics>
                </component>
                <component>
                    <name>HST_AGENT</name>
                    <displayName>HST Agent</displayName>
                    <category>SLAVE</category>
                    <cardinality>ALL</cardinality>
                    <auto-deploy>
                        <enabled>true</enabled>
                    </auto-deploy>
                    <versionAdvertised>false</versionAdvertised>
                    <dependencies>
                        <dependency>
                            <name>SMARTSENSE/HST_SERVER</name>
                            <auto-deploy>
                                <enabled>true</enabled>
                            </auto-deploy>
                            <scope>cluster</scope>
                        </dependency>
                    </dependencies>
                    <commandScript>
                        <script>scripts/hst_agent.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>600</timeout>
                    </commandScript>
                    <logs>
                        <log>
                            <logId>hst_agent</logId>
                            <primary>true</primary>
                        </log>
                    </logs>
                    <customCommands>
                        <customCommand>
                            <name>Capture</name>
                            <displayName>Capture for SmartSense</displayName>
                            <commandScript>
                                <script>scripts/hst_agent.py</script>
                                <scriptType>PYTHON</scriptType>
                                <timeout>600</timeout>
                            </commandScript>
                        </customCommand>
                        <customCommand>
                            <name>Refresh_Schedule</name>
                            <displayName>Refresh capture schedule</displayName>
                            <commandScript>
                                <script>scripts/hst_agent.py</script>
                                <scriptType>PYTHON</scriptType>
                                <timeout>600</timeout>
                            </commandScript>
                        </customCommand>
                    </customCommands>
                    <configuration-dependencies>
                        <config-type>hst-agent-conf</config-type>
                        <config-type>hst-log4j</config-type>
                        <config-type>anonymization-conf</config-type>
                        <config-type>anonymization-rules</config-type>
                    </configuration-dependencies>
                    <osSpecifics>
                        <osSpecific>
                            <osFamily>any</osFamily>
                            <packages>
                                <package>
                                    <name>smartsense-hst-agent</name>
                                    <skipUpgrade>true</skipUpgrade>
                                </package>
                            </packages>
                        </osSpecific>
                    </osSpecifics>
                </component>
            </components>
            <!-- what yum packages will be needed for the setup. These will be installed by install_packages() in master.py -->
            <osSpecifics>
                <osSpecific>
                    <osFamily>any</osFamily>
                    <packages>
                        <package>
                            <name>wget</name>
                            <skipUpgrade>true</skipUpgrade>
                        </package>
                    </packages>
                </osSpecific>
            </osSpecifics>
            <themes>
                <theme>
                    <fileName>theme.json</fileName>
                    <default>true</default>
                </theme>
                <theme>
                    <fileName>credentials.json</fileName>
                    <default>true</default>
                </theme>
            </themes>
            <commandScript>
                <script>scripts/service_check.py</script>
                <scriptType>PYTHON</scriptType>
                <timeout>300</timeout>
            </commandScript>
            <requiredServices>
                <service>AMBARI_METRICS</service>
            </requiredServices>
            <quickLinksConfigurations>
                <quickLinksConfiguration>
                    <fileName>quicklinks.json</fileName>
                    <default>true</default>
                </quickLinksConfiguration>
            </quickLinksConfigurations>
        </service>
    </services>
