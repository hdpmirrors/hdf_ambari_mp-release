<configuration>
  <property>
    <name>oracle_ssl_enabled</name>
    <value>false</value>
    <display-name>Enable Oracle SSL</display-name>
    <description>Check if Oracle SSL need to be enabled.</description>
    <value-attributes>
      <type>boolean</type>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>
  <property>
    <name>oracle_ssl_version</name>
    <value>1</value>
    <display-name>Oracle SSL version</display-name>
    <description>Oracle SSL version.</description>
    <on-ambari-upgrade add="true"/>
  </property>
  <property>
    <name>oracle_ssl_server_dn_match</name>
    <value>true</value>
    <display-name>Oracle SSL DN match</display-name>
    <description>Oracle SSL DN match.</description>
    <value-attributes>
      <type>boolean</type>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>
  <property>
    <name>oracle_ssl_trust_store</name>
    <value></value>
    <display-name>Oracle SSL truststore path</display-name>
    <description>Oracle SSL  truststore path.</description>
    <value-attributes>
      <empty-value-valid>true</empty-value-valid>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>
  <property>
    <name>oracle_ssl_trust_store_type</name>
    <value>SSO</value>
    <display-name>Oracle SSL truststore type</display-name>
    <description>Oracle SSL truststore type.</description>
    <on-ambari-upgrade add="true"/>
  </property>
  <property>
    <name>oracle_ssl_key_store</name>
    <value></value>
    <display-name>Oracle SSL keystore path</display-name>
    <description>Oracle SSL keystore path.</description>
    <value-attributes>
      <empty-value-valid>true</empty-value-valid>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>
  <property>
    <name>oracle_ssl_key_store_type</name>
    <value>SSO</value>
    <display-name>Oracle SSL keystore type</display-name>
    <description>Oracle SSL keystore type.</description>
    <on-ambari-upgrade add="true"/>
  </property>
</configuration>
