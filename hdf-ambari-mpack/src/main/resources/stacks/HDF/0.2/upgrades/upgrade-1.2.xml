          <task id="hdf_2_3_0_0_yarn_rm_check_cs_root_max_capacity" xsi:type="configure" />

          <task class="org.apache.ambari.server.serveraction.upgrades.SparkShufflePropertyConfig" summary="Calculating Yarn Properties for Spark Shuffle" xsi:type="server_action" />
        </pre-upgrade>
        <upgrade>
          <task xsi:type="restart-task" />
        </upgrade>
      </component>

      <component name="NODEMANAGER">
        <upgrade>
